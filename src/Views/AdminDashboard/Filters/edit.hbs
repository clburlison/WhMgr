<form method="POST" action="">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" value="{{name}}">
    </div>
    <div class="accordion" id="accordionPanelsStayOpenExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingPokemon">
                <button class="accordion-button bg-dark text-light {{#unless filter.pokemon.enabled}}collapsed{{/unless}}" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapsePokemon" aria-expanded="true" aria-controls="panelsStayOpen-collapsePokemon">
                    Pokemon Filters
                </button>
            </h2>
            <div id="panelsStayOpen-collapsePokemon" class="accordion-collapse collapse {{#if filter.pokemon.enabled}}show{{/if}}" aria-labelledby="panelsStayOpen-headingPokemon">
                <div class="accordion-body">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="pokemonEnabled" {{#if filter.pokemon.enabled}}checked{{/if}}>
                        <label class="form-check-label" for="pokemonEnabled">Enabled</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonPokemonList">Pokemon</label>
                        <input class="form-control" type="text" id="pokemonPokemonList" name="pokemonPokemonList" value="{{filter.pokemon.pokemon}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonFormsList">Forms</label>
                        <input class="form-control" type="text" id="pokemonFormsList" name="pokemonFormsList" value="{{filter.pokemon.forms}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonCostumesList">Costume</label>
                        <input class="form-control" type="text" id="pokemonCostumesList" name="pokemonCostumesList" value="{{filter.pokemon.costumes}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMinIV">Minimum IV</label>
                        <input class="form-control" type="text" id="pokemonMinIV" name="pokemonMinIV" value="{{filter.pokemon.minimumIV}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMaxIV">Maximum IV</label>
                        <input class="form-control" type="text" id="pokemonMaxIV" name="pokemonMaxIV" value="{{filter.pokemon.maximumIV}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMinCP">Minimum CP</label>
                        <input class="form-control" type="text" id="pokemonMinCP" name="pokemonMinCP" value="{{filter.pokemon.minimumCP}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMaxCP">Maximum CP</label>
                        <input class="form-control" type="text" id="pokemonMaxCP" name="pokemonMaxCP" value="{{filter.pokemon.maximumCP}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMinLevel">Minimum Level</label>
                        <input class="form-control" type="text" id="pokemonMinLevel" name="pokemonMinLevel" value="{{filter.pokemon.minimumLevel}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMaxLevel">Maximum Level</label>
                        <input class="form-control" type="text" id="pokemonMaxLevel" name="pokemonMaxLevel" value="{{filter.pokemon.maximumLevel}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonGender">Gender</label>
                        <select class="form-control" id="pokemonGender" name="pokemonGender">
                            <option value="*">All</option>
                            <option value="m">Male</option>
                            <option value="m">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonSize">Size</label>
                        <select class="form-control" id="pokemonSize" name="pokemonSize">
                            <option value="0">All</option>
                            <option value="1">Tiny</option>
                            <option value="2">Small</option>
                            <option value="3">Normal</option>
                            <option value="4">Large</option>
                            <option value="5">Big</option>
                        </select>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="greatLeague" name="greatLeague" {{#if filter.pokemon.IsPvpGreatLeague}}checked{{/if}}>
                        <label class="form-check-label" for="greatLeague">Is Great League</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="ultraLeague" name="ultraLeague" {{#if filter.pokemon.IsPvpUltraLeague}}checked{{/if}}>
                        <label class="form-check-label" for="ultraLeague">Is Ultra League</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMinRank">Minimum Rank</label>
                        <input class="form-control" type="number" id="pokemonMinRank" name="pokemonMinRank" value="{{filter.pokemon.minimumRank}}">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonMaxRank">Maximum Rank</label>
                        <input class="form-control" type="number" id="pokemonMaxRank" name="pokemonMaxRank" value="{{filter.pokemon.maximumRank}}">
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="isEvent" name="isEvent" {{#if filter.pokemon.isEvent}}checked{{/if}}>
                        <label class="form-check-label" for="isEvent">Is Event Pokemon</label>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="pokemonType">Filter Type</label>
                        <select class="form-control" id="pokemonType" name="pokemonType">
                            <option value="Include">Include</option>
                            <option value="Exclude">Exclude</option>
                        </select>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="ignoreMissing" name="ignoreMissing" {{#if filter.pokemon.ignoreMissing}}checked{{/if}}>
                        <label class="form-check-label" for="ignoreMissing">Ignore Missing</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header" id="panelsStayOpen-headingPokemonMissing">
                <button class="accordion-button bg-dark text-light {{#unless filter.pokemonMissingStats.enabled}}collapsed{{/unless}}" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseMissing" aria-expanded="false" aria-controls="panelsStayOpen-collapseMissing">
                    Pokemon w/o Stats Filters
                </button>
            </h2>
            <div id="panelsStayOpen-collapseMissing" class="accordion-collapse collapse {{#if filter.raids.enabled}}show{{/if}}" aria-labelledby="panelsStayOpen-headingPokemonMissing">
