<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{title}}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a type="button" class="btn btn-sm btn-success" href="/dashboard/configs/new">
            New Config
        </a>
    </div>
</div>

<div class="responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Endpoint</th>
                <th scope="col">No. Servers</th>
                <th scope="col" class="col-1"></th>
            </tr>
        </thead>
        <tbody>
        {{#each configs}}
            <tr scope="row">
                <td>{{@key}}</td>
                <td>{{listeningHost}}:{{webhookPort}}</td>
                <td>{{len servers}}</td>
                <td>
                    <a type="button" class="btn btn-primary btn-sm" href="/dashboard/configs/edit/{{@key}}">
                        <i class="fas fa-edit"></i>
                    </a>
                    <a type="button" class="btn btn-danger btn-sm" href="/dashboard/configs/delete/{{@key}}" onclick="confirm('Are you sure you want to delete config {{@key}}?');">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>