<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{title}}</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a type="button" class="btn btn-sm btn-success" href="/dashboard/discords/new">
            New Discord Server
        </a>
    </div>
</div>

<p>
    Discord server configs.
</p>

<table
    id="table"
    data-toggle="table"
    data-search="true"
    data-pagination="true">
    <thead class="bg-dark text-light">
        <tr>
            <th scope="col" data-sortable="true">Name</th>
            <th scope="col" data-sortable="true">Alarms</th>
            <th scope="col" class="col-1" data-sortable="true">No. Geofences</th>
            <th scope="col" class="col-1" data-sortable="true">Subscriptions Enabled</th>
            <th scope="col" data-sortable="true">Icon Style</th>
            <th scope="col" data-sortable="true">Embeds</th>
            <th scope="col" class="col-1"></th>
        </tr>
    </thead>
    <tbody>
    {{#each discords}}
        <tr>
            <td>{{@key}}</td>
            <td>{{alarmsFile}}</td>
            <td>{{geofences.Count}}</td>
            <td>{{formatBool subscriptions.enabled}}</td>
            <td>{{iconStyle}}</td>
            <td>{{dmEmbedsFile}}</td>
            <td>
                <!--<button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editDiscordModal">Edit</button>-->
                <a type="button" class="btn btn-primary btn-sm" href="/dashboard/discords/edit/{{@key}}">
                    <i class="fas fa-edit"></i>
                </a>
                <a type="button" class="btn btn-danger btn-sm" href="/dashboard/discords/delete/{{@key}}" onclick="return confirm('Are you sure you want to delete discord {{@key}}?');">
                    <i class="fas fa-trash-alt"></i>
                </a>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<div class="modal fade" id="viewDiscordModal" tabindex="-1" aria-labelledby="viewDiscordModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewDiscordModalLabel">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>