<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/dashboard/roles">Roles</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Role</li>
    </ol>
</nav>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">{{title}}</h1>
</div>

<form method="POST" action="">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{role.name}}">
    </div>
    <div class="mb-3">
        <label for="id" class="form-label">ID</label>
        <input type="number" class="form-control" id="id" name="id" value="{{roleId}}">
    </div>
    <div class="mb-3">
        <label for="permissions" class="form-label">Permissions</label>
        <select class="form-control" id="permissions" name="permissions" multiple>
            <option value="pokemon" {{isSelected role.permissions "pokemon"}}>Pokemon</option>
            <option value="pvp" {{isSelected role.permissions "pvp"}}>PvP</option>
            <option value="raids" {{isSelected role.permissions "raids"}}>Raids</option>
            <option value="quests" {{isSelected role.permissions "quests"}}>Quests</option>
            <option value="invasions" {{isSelected role.permissions "invasions"}}>Invasions</option>
            <option value="lures" {{isSelected role.permissions "lures"}}>Lures</option>
            <option value="gyms" {{isSelected role.permissions "gyms"}}>Gyms</option>
        </select>
    </div>
    <div class="mb-3">
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="moderator" name="moderator" {{#if role.isModerator}}checked{{/if}}>
            <label class="form-check-label" for="moderator">Is Moderator</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

